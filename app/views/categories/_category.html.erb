<div id="<%= dom_id category %>" class="card shadow mb-4 mx-auto col-10 col-sm-6">
  <h5 class="card-header"><%= category.name %></h5>
  <div class="card-body">
    <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
    <%= link_to 'Show', category, class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Edit', [:edit, category], class: 'btn btn-secondary btn-sm' %>
    <%= button_to 'Delete', category, method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger btn-sm', form: { class: 'd-inline' } %>
  </div>

</div>