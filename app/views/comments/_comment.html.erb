<div id="<%= dom_id(comment, dom_id(comment.article)) %>" class="card col-sm-6 col-9 shadow mb-4 mx-auto">
  <div class="card-header">
    Username
  </div>

  <div class="card-body">
    <p class="card-text">
      <%= comment.message %>
    </p>

    <div>
      <%= button_to 'Delete', [comment.article, comment], method: :delete, class:'btn btn-danger btn-sm' %>
    </div>
  </div>
  <div class="card-footer text-muted">
    <small>Created <%= time_ago_in_words(comment.created_at) %> ago.</small>
  </div>

</div>
